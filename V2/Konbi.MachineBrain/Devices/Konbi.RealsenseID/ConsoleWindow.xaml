<Window x:Class="Konbi.RealsenseID.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konbi.RealsenseID"
        mc:Ignorable="d"
        Title="ConsoleWindow" Height="450" Width="800">
    <Grid>

        <ScrollViewer x:Name="LogScroll" Margin="0,0,0,52" Padding="24,24,0,0" Template="{DynamicResource ScrollViewerControlTemplate1}">
            <TextBlock x:Name="LogTextBox" Text="00000 Something happened here" TextWrapping="Wrap" Foreground="{DynamicResource PrimaryText}" FontSize="14" FontWeight="Normal"/>
        </ScrollViewer>
    </Grid>
</Window>
